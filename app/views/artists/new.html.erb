<%= form_for @artist, url: { action: "create" } do |f| %>
  <%= f.label :name %><br>
  <%= f.text_field :name %><br>
  <%= f.label :bio %><br>
  <%= f.text_area :bio, size: "100x50" %><br>
  <%= hidden_field_tag :authenticity_token, form_authenticity_token %>
  <%= f.submit "Create Artist", html: { class: "btn-submit" } %>
<% end %>
